<!-- touch with us and detail filling -->
<div class="container forborder">
    <div class="container-fluid touch-with-us">

        <div class="row row1">
            <div class="col text-center">
                <p>Get in touch with us</p>
            </div>
        </div>

        <form method="post">

            <div class="row row2">
                <div class="col form-group">

                    <input class="form-control" type="text" asp-for="Name" id="" placeholder="First name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col form-group">

                    <input class="form-control" type="text" name="Lastname" placeholder="Last name">
                </div>
            </div>
            <div class="row row3">
                <div class="col form-group">

                    <input class="form-control" type="tel" asp-for="PhoneNumber" id="" placeholder="Phone">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col form-group">

                    <input class="form-control" type="email" asp-for="Email" id="" placeholder="Email address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row row4">
                <div class="col form-group">

                    <select class="custom-select" type="text" asp-for="Subject">

                        <option value="General">General</option>
                        <option value="Inquiry">Inquiry</option>
                        <option value="Renewal">Renewal</option>
                        <option value="Revocation">Revocation</option>
                    </select>
                </div>
            </div>
            <div class="row row5">
                <div class="col form-group">

                    <textarea class="form-control" asp-for="Message"
                              style="height: 146px;"
                              type="text" id="" placeholder="message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

            </div>
            <div class="row">

                <div class="col form-group">
                    <input type="file" asp-for="AttachmentFile"  class="form-control-file">
                    <span asp-validation-for="AttachmentFile" class="text-danger"></span>
                </div>
            </div>
            <span style="color:green">@ViewBag.Message</span>
            <div class="row">

                <div class="col form-group text-center">
                    <button class="btn submitbtn" type="submit"> Submit</button>


                </div>
            </div>



        </form>
    </div>
</div>
<!-- touch with us over -->
