@{
    Layout = "_Layout";
}
<div class="container forborder">
    <div id="commonsection2">

        <div class="row text-center row1">
            <p class="title m-0 p-0">Create Account</p>
        </div>

        <div class="row row2 justify-content-center">
            <div class="line"></div>
            <img class="px-0" id="seprator" src="~/assets/separator.png" alt="">
            <div class="line"></div>
        </div>
    </div>
    <div class="container-fluid " id="createform">


        <div class="row row2">
            <div class="col">

                <input class="form-control" type="text" name="" id="" placeholder="First name">
            </div>
            <div class="col">

                <input class="form-control" type="text" name="" id="" placeholder="Last name">
            </div>
        </div>
        <div class="row row3">


            <div class="col">

                <input class="form-control" type="email" name="" id="" placeholder="Email address">
            </div>
            <div class="col">

                <input class="form-control" type="tel" name="" id="" placeholder="Mobile Number">
            </div>
        </div>
        <div class="row row4">

            <div class="col">

                <input class="form-control" type="email" name="" id="" placeholder="Password">
            </div>
            <div class="col">

                <input class="form-control" type="tel" name="" id="" placeholder="Confirm Password">
            </div>
        </div>
        <div class="row">
            <div class="col">

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Yes, I would like to subscribe to the Helperland GmbH newsletter with vouchers, trends, promotions and individualized offers. I can unsubscribe from the newsletter at any time in the newsletter and in my customer account</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-check ">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">I agree to the terms and conditions of Helperland GmbH.</label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">


                <div class="form-check ">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">I have read the privacy policy .</label>
                </div>
            </div>
        </div>

        <div class="row btncenter">

            <div class="col ">
                <button class="btn submitbtn" type="submit">Register</button>
            </div>
        </div>
        <div class="text-center">
            Already registered?   
            <a class="" asp-controller="Home" asp-action="Index" >log in now</a>
        </div>


    </div>
</div>
