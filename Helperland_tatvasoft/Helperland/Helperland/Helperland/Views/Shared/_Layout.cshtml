
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Session;

@model Helperland.Models.User;

@{
    string IsLoggedIn = Context.Session.GetString("IsLoggedIn");
    string UserTypeId = Context.Session.GetString("UserTypeId");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- <link rel="stylesheet" href="bootstrap-5.1.3-dist/css/bootstrap.css"> -->
    <link href="~/css/site.css" rel="stylesheet" />

</head>

<body>

    <!-- wrapper start contains sidebar, content -->
    <div class="wrapper " id="main-sidebar">

        <!-- sidebar containing 3 rows for name header tabs and sidetabs -->

        <nav id="sidebar">


            <div class="container-fluid">
                @if (IsLoggedIn == "true" && UserTypeId == "1")
                {
                    <div class="row row1">
                        Warm Welcome,
                        @Context.Session.GetString("Name").
                    </div>
                    <div class="row row2">
                        <ul class="nav nav-tabs flex-column" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="CustomerId" asp-controller="User" asp-route-id="1">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CustomerId" asp-controller="User" asp-route-id="2">Service History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled " asp-action="CustomerId" asp-controller="User" asp-route-id="3">>Favourite pros </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="CustomerId" asp-controller="User" asp-route-id="4">My settings </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>

                        </ul>
                    </div>
                }
                @if (IsLoggedIn == "true" && UserTypeId == "2")
                {
                    <div class="row row1">
                        Warm Welcome,
                        @Context.Session.GetString("Name").
                    </div>
                    <div class="row row2">
                        <ul class="nav nav-tabs flex-column" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="1">New Service Requests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="2">Upcoming Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled " asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="3">Service Schedule </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="4">Service History </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="5">My Ratings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="6">Block Customer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="7">My Settings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>

                        </ul>
                    </div>
                }


                <div class="row row3">
                    <ul class="navbar-nav">
                        @if (UserTypeId == "1")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PublicPages" asp-action="Book_now">Book now</a>
                            </li>

                        }

                        <li class="nav-item">
                            <a class="nav-link" href="#">Price & services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Warranty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact </a>
                        </li>

                        @if (IsLoggedIn != "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="#">Register </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#">Become helper </a>
                            </li>
                        }


                    </ul>

                </div>
                <div class="row4">

                    <img class="socialmedia" src="~/assets/facebook-mobile-menu.png" alt="">
                    <img class="socialmedia" src="~/assets/instagram-mobile-menu.png" alt="">
                </div>
            </div>
            <div id="dismiss">
                <i class="fas fa-arrow-left"></i>
            </div>
        </nav>
        <!-- sidebar over -->
        <!-- it contains header -->
        <div id="content">
            <section id="header">

                <nav class="navbar navbar-expand-lg navbar-light mynav">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/assets/logo-small.png" alt="Helperland"></a>
                    <button class="navbar-toggler" id="sidebarCollapse" type="button">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            @if (IsLoggedIn == "true")
                            {
                                if (UserTypeId == "1")
                                {
                                    <li class="nav-item">
                                        <a class="btn" asp-controller="PublicPages" asp-action="Book_now">Book now</a>
                                    </li>
                                }

                            }
                            else
                            {
                                <li>
                                    <a class="btn " data-toggle="modal" data-target="#login-popup">Book a cleaner</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="PublicPages" asp-action="Price">Prices &amp; services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Warranty</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Blog</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link" asp-area="" asp-controller="PublicPages" asp-action="Contact">Contact </a>
                            </li>
                            @if (IsLoggedIn == "true")
                            {
                                <li class="nav-item notification">

                                    <a class="nav-link" href="#"><img src="~/assets/icon-notification.png" alt=""> </a>
                                </li>


                                <li class="nav-item dropdown ">

                                    <a class=" nav-link dropdown-toggle" data-toggle="dropdown">
                                        <img src="~/assets/admin-user.png" alt=""> @*<img src="~/assets/down-arrow (1).png" alt="">*@
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-right">
                                        <li>
                                            <div class="dropdown-item">
                                                Welcome,<br />
                                                <b>@Context.Session.GetString("Name")</b>
                                            </div>
                                        </li>
                                        <li class="divider"></li>
                                        @if (UserTypeId == "1")
                                        {
                                            <li><a class="dropdown-item" asp-action="Customer" asp-controller="User" asp-route-id="1">My Dashboard</a></li>
                                            <li><a class="dropdown-item" asp-action="CustomerId" asp-controller="User" asp-route-id="4">My Setting</a></li>
                                            <li>
                                                <a a class="dropdown-item" asp-controller="Home" asp-action="Logout">
                                                    Logout
                                                </a>
                                            </li>

                                        }
                                        @if (UserTypeId == "2")
                                        {
                                            <li><a class="dropdown-item" asp-action="Serviceprovider" asp-controller="ServiceProvider">New Service Request</a></li>
                                            <li>
                                                <a class="dropdown-item" asp-action="ServiceproviderId" asp-controller="ServiceProvider" asp-route-id="7">My Settings</a>
                                            </li>
                                            <li>
                                                <a a class="dropdown-item" asp-controller="Home" asp-action="Logout">
                                                    Logout
                                                </a>
                                            </li>
                                        }

                                    </ul>

                                </li>

                            }

                            else
                            {
                                <li class="nav-item">
                                    <a class="btn" data-toggle="modal" data-target="#login-popup">Login</a>
                                </li>

                                <li class="nav-item">
                                    <a class="btn" asp-controller="Home" asp-action="Becomeprovider">Become a helper</a>
                                </li>
                            }


                        </ul>
                    </div>
                </nav>
            </section>
        </div>
        <!-- content over -->

        <div class="overlay"></div>

    </div>
    <!-- wrapper over -->
    <partial name="_login" />
    <partial name="_ForgetPassword" />

    <partial name="_CustomerAddAddress" />

    <div>
        @RenderBody()
    </div>



    <section class="container-fluid" id="footer">
        <div class="row align-self-center">
            <div class="col-md-2 col-sm-4 text-center text-sm-end ">
                <img class="img-fluid my-3" src="~/assets/footer-logo.png" srcset="">
            </div>
            <div class="col-md-8 col-sm-4">
                <div class="container my-1 my-md-5">
                    <div class="row justify-content-center text-center">
                        <div class="col-lg-1 "><a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">HOME</a></div>
                        <div class="col-lg-1 "><a class="nav-link " asp-area="" asp-controller="PublicPages" asp-action="about">ABOUT</a></div>
                        <div class="col-lg-2 "><a class="nav-link " href="#">TESTIMONIALS</a></div>
                        <div class="col-lg-1"><a class="nav-link " asp-area="" asp-controller="PublicPages" asp-action="faq">FAQS</a></div>
                        <div class="col-lg-2"><a class="nav-link " href="#" s>INSURANCE POLICY</a></div>
                        <div class="col-lg-1 "><a class="nav-link " href="#">IMPRESSUM</a></div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 text-center mb-2 mb-sm-0">
                <img class="img-fluid my-1 my-sm-5" src="~/assets/ic-facebook.png" height="20" width="10" alt=""
                     srcset="">
                <img class="img-fluid my-1 my-sm-5 mx-3" src="~/assets/ic-instagram.png" height="20" width="20" alt=""
                     srcset="">
            </div>
        </div>
        <div class="row align-self-center privacy-policy">


            <p>
                ©2018 Helperland. All rights reserved. Terms and Conditions | <a class="link" href="#">
                    Privacy
                    policy.
                </a>


        </div>

    </section>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("script")

    @if (TempData.ContainsKey("Modal"))
    {
        <script>
            $(document).ready(function () {

                var temp = '@TempData["Modal"]';
                $(temp).modal('show');
            });
        </script>
    }
    <script>
    </script>
</body>

</html>
